<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_category"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/border"
    android:layout_marginTop="@dimen/item_margin"
    android:layout_marginBottom="@dimen/item_margin">

    <ImageView
        android:id="@+id/category_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_category"
        android:minWidth="@dimen/image_category_width_height"
        android:minHeight="@dimen/image_category_width_height"
        android:layout_margin="@dimen/image_margin"
        android:contentDescription="@string/description_image_category"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/category_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/example_category_name"
            android:minHeight="@dimen/text_category_height"
            android:maxHeight="@dimen/text_category_height"
            android:maxWidth="@dimen/text_category_width"
            android:gravity="center"
            android:layout_marginTop="@dimen/text_margin"/>

        <TextView
            android:id="@+id/category_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/example_category_count"
            android:minHeight="@dimen/text_category_height"
            android:maxHeight="@dimen/text_category_height"
            android:maxWidth="@dimen/text_category_width"
            android:gravity="center"
            android:layout_marginBottom="@dimen/text_margin"/>

    </LinearLayout>
</LinearLayout>